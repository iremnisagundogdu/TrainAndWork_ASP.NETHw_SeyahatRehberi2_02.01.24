@model BlogOdev.Models.Login
@{
    ViewBag.Title = "Login";
}

<div class="container">
    <br />
    <div class="row">

        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/Home/Index">Anasayfa</a></li>
                <li class="breadcrumb-item active" aria-current="page">Giriş</li>
            </ol>
        </nav>
        <div class="col-md-12">
            <!--Makale Listesi-->
            <div class="img-thumbnail">
                <br /> <br /><br />
                @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "row" }))
                {
                    
                    <div class="row mb-3" style="text-align:center">
                        <label class="col-sm-2 col-form-label">Kullanıcı Adı</label>
                        <div class="col-sm-4">
                            @Html.EditorFor(m => m.Username, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })

                        </div>
                    </div>
                    
                    <div class="row mb-3" style="text-align:center">
                        <label class="col-sm-2 col-form-label">Şifre</label>
                        <div class="col-sm-4">
                            @Html.EditorFor(m => m.Password, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })

                        </div>
                    </div>
                    
                    <div class="row mb-3" style="text-align:center">
                        <label class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-4">
                            <button type="submit" class="btn btn-outline-success col-6"><i class="bi bi-box-arrow-in-right"></i>&nbsp; &nbsp; Giriş</button>
                        </div>
                    </div>

                   
                }
            </div>


        </div>

      
    </div>
</div>

