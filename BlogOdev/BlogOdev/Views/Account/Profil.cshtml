@model BlogOdev.Models.UpdateProfile
@{
    ViewBag.Title = "Profil";
}

<div class="container">
    <br />
    <div class="row">

        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/Home/Index">Anasayfa</a></li>
                <li class="breadcrumb-item active" aria-current="page">Profil Güncelleme</li>
            </ol>
        </nav>
        <div class="col-md-8">
            <!--Makale Listesi-->
            <div class="img-thumbnail">
                <br />
                @using (Html.BeginForm("Profil", "Account", FormMethod.Post, new { @class = "row" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model=>model.Id)
                    <div class="row mb-3" style="text-align:center">
                        <label class="col-sm-2 col-form-label">Soyadı</label>
                        <div class="col-sm-4">
                            @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })

                        </div>
                    </div>
                    <div class="row mb-3" style="text-align:center">
                        <label class="col-sm-2 col-form-label">Adı</label>
                        <div class="col-sm-4">
                            @Html.EditorFor(m => m.Surname, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => m.Surname, "", new { @class = "text-danger" })

                        </div>
                    </div>
                    <div class="row mb-3" style="text-align:center">
                        <label class="col-sm-2 col-form-label">Kullanıcı Adı</label>
                        <div class="col-sm-4">
                            @Html.EditorFor(m => m.Username, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })

                        </div>
                    </div>
                    <div class="row mb-3" style="text-align:center">
                        <label class="col-sm-2 col-form-label">E-mail</label>
                        <div class="col-sm-4">
                            @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })

                        </div>
                    </div>
                   
                    <div class="row mb-3" style="text-align:center">
                        <label class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-4">
                            <button type="submit" class="btn btn-outline-primary col-6"><i class="bi bi-pencil"></i>&nbsp; &nbsp; Güncelle</button>
                        </div>
                    </div>
                }
            </div>


        </div>
        <div class="col-md-4">
            <!--Kategori Listesi-->
            <div class="list-group">
                <a href="#" class="list-group-item list-group-item-action active bg-primary bg-opacity-25 text-black" aria-current="true">
                    Tüm Kategoriler
                </a>
                <a href="#" class="list-group-item list-group-item-action">Marmara Bölgesi</a>
                <a href="#" class="list-group-item list-group-item-action">Ege Bölgesi </a>
                <a href="#" class="list-group-item list-group-item-action">Akdeniz Bölgesi</a>
                <a href="#" class="list-group-item list-group-item-action">Karadeniz Bölgesi</a>
                <a href="#" class="list-group-item list-group-item-action">Doğu Anadolu Bölgesi</a>
                <a href="#" class="list-group-item list-group-item-action">Güneydoğu Anadolu Bölgesi</a>

            </div>
            <br />
            <h6 style="color:darkblue">Çok Okunanlar</h6>
            <div class="card mb-3" style="max-width: 355px;">
                <div class="row g-0">
                    <div class="col-md-4">
                        <img src="~/Content/İmages/Mardin.jpg" alt="..." width="120" height="90">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">

                            <p class="card-text">Dillerin ve Dinlerin Kenti Mardin</p>

                        </div>
                    </div>
                    <div class="card-footer">
                        <small class="text-body-secondary"><i class="bi bi-clock" style="font-size:15px"></i> Tarih  &nbsp; &nbsp; <i class="bi bi-eye" style="font-size:15px"></i> 10 Görüntüleme </small>
                    </div>
                </div>
            </div>
            <div class="card mb-3" style="max-width: 355px;">
                <div class="row g-0">
                    <div class="col-md-4">
                        <img src="~/Content/İmages/Trabzon.jpeg" alt="..." width="120" height="90">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">

                            <p class="card-text">Karadeniz'in İncisi ve Tarihin Can Bulduğu Şehir</p>

                        </div>
                    </div>
                    <div class="card-footer">
                        <small class="text-body-secondary"><i class="bi bi-clock" style="font-size:15px"></i> Tarih  &nbsp; &nbsp; <i class="bi bi-eye" style="font-size:15px"></i> 23 Görüntüleme </small>
                    </div>
                </div>
            </div>
            <div class="card mb-3" style="max-width: 355px;">
                <div class="row g-0">
                    <div class="col-md-4">
                        <img src="~/Content/İmages/İstanbul.jpg" alt="..." width="120" height="90">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">

                            <p class="card-text">İstanbul: Kıtalararası Bir Aşk Hikayesi</p>

                        </div>
                    </div>
                    <div class="card-footer">
                        <small class="text-body-secondary"><i class="bi bi-clock" style="font-size:15px"></i> Tarih  &nbsp; &nbsp; <i class="bi bi-eye" style="font-size:15px"></i> 10 Görüntüleme </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

