@model IEnumerable<BlogOdev.Models.BlogPosts>

@{
    ViewBag.Title = "Index";
}

<div class="container">

    <table class="table">
        <tr>
            <th>
                Kullanıcı Adı
            </th>
            <th>
                Başlık
            </th>

            <th>
                Açıklama
            </th>
            <th>
                Tarih
            </th>

            <th>
                Onay
            </th>

            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <label class="btn btn-primary btn-sm">@item.KullaniciAd</label>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Baslik)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Icerik)
                </td>
                <td>
                    @item.YayinTarih.ToString("dd-MM-yyyy")
                </td>

                <td>
                    @if (item.Onay)
                    {
                        <label class="btn btn-success btn-sm"><i class="bi bi-check-circle"></i>Evet</label>
                    }
                    else
                    {
                        <label class="btn btn-danger btn-sm"><i class="bi bi-x-circle"></i>Hayır</label>
                    }
                </td>

                <td>
                     <a class="btn btn-outline-primary" href="@Url.Action("Edit", new { id=item.Id })"><i class="bi bi-pencil">Düzenle</i></a>
                     <a class="btn btn-outline-danger" href="@Url.Action("Delete", new { id=item.Id })"><i class="bi bi-trash">Sil</i></a>
                </td>
            </tr>
        }

    </table>

</div>
